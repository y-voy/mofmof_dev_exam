<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= number_to_currency(@property.rent)%>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<% @nearest_stations = @property.nearest_stations %>
<% num = 1 %>
<% @nearest_stations.each do |nearest_station| %>
<br>
<p>
  <strong>最寄り駅<%= num %></strong>
</p>
<p>
  <strong>路線名:</strong>
  <%= nearest_station.line %>
</p>

<p>
  <strong>駅名:</strong>
  <%= nearest_station.station %>
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= nearest_station.minute_walk %>分
</p>
<% num += 1 %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
